# Server Configuration
PORT=8080
ENV=production
FRONTEND_URL=http://localhost:5173

# Database Configuration
# Option 1: Use full DATABASE_URL (recommended for cloud databases like Neon, Supabase, etc.)
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
# Example: DATABASE_URL=postgresql://neondb_owner:npg_tu*^*^*^%&*yhH2r@ep-curly-rain-ab53ks68-pooler.eu-west-2.aws.neon.tech/mini_meeting?sslmode=require&channel_binding=require

# Option 2: Use individual parameters (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=mini_meeting

# Redis Configuration
REDIS_HOST=your_redis_host_here
REDIS_PORT=your_redis_port_here
REDIS_USERNAME=your_redis_username_here
REDIS_PASSWORD=your_redis_password_here

# LiveKit Configuration
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret
LIVEKIT_URL=ws://localhost:7880

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=24h

# OAuth Configuration
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3000/api/v1/auth/google/callback

# GitHub OAuth - Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:3000/api/v1/auth/github/callback

# Summarizer Configuration
# Duration of each audio chunk in seconds
SUMMARIZER_CHUNK_DURATION_SECONDS=20
# Temporary directory for storing audio files
SUMMARIZER_TEMP_DIR=./tmp/summarizer
# Hours after which to cleanup old session files
SUMMARIZER_CLEANUP_AFTER_HOURS=24

# Wisper Configuration
WHISPER_URL=http://localhost:9000
WHISPER_TIMEOUT=120s
WHISPER_MAX_CONCURRENCY=2

# OpenRouter Configuration
# Get your API key from: https://openrouter.ai/keys
OPEN_ROUTER_API_KEY=your_open_router_api_key
OPEN_ROUTER_BASE_URL=https://openrouter.ai/api/v1
# Default model for summarization
OPEN_ROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free
# Request timeout in seconds (increase for free models which may be slower)
OPEN_ROUTER_TIMEOUT=300s
# Maximum tokens for response
OPEN_ROUTER_MAX_TOKENS=4096

# Brevo (Sendinblue) Email Configuration
# Get your API key from: https://app.brevo.com/settings/keys/api
BRAVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=noreply@gmail.com
BREVO_SENDER_NAME=Mini Meeting
