# Server Configuration
PORT=3000
ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=24h

# Summarizer Configuration
SUMMARIZER_CHUNK_DURATION_SECONDS=20
SUMMARIZER_TEMP_DIR=./tmp/summarizer

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Redis Configuration
REDIS_HOST=your_redis_host_here
REDIS_PORT=your_redis_port_here
REDIS_USERNAME=your_redis_username_here
REDIS_PASSWORD=your_redis_password_here

# LiveKit Configuration
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret
LIVEKIT_URL=ws://localhost:7880

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3000/api/v1/auth/google/callback
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:3000/api/v1/auth/github/callback

# OpenRouter Configuration
OPEN_ROUTER_API_KEY=your_open_router_api_key
OPEN_ROUTER_BASE_URL=https://openrouter.ai/api/v1
OPEN_ROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free
OPEN_ROUTER_TIMEOUT=300s
OPEN_ROUTER_MAX_TOKENS=4096

# Brevo (Sendinblue) Email Configuration
BRAVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=noreply@gmail.com
BREVO_SENDER_NAME=Mini Meeting
